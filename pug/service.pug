extends common/_layout.pug
include sections/_continuity.pug

block links
    link(rel="stylesheet", href="css/service.css")

block content
    include sections/service/_main.pug
    include sections/service/_subservices.pug
    include sections/service/_comfort.pug
    +continuity('Сценарии <span>освещения.</span>')
    include sections/_showroom.pug
    include sections/_projects.pug
    include sections/_scheme.pug
    include sections/_faq.pug

    script.
        header = document.querySelector('header')
        header.classList.add('transparent')

        window.addEventListener('scroll', event => {
            this.scrollY > 10 ? header.classList.remove("transparent") : header.classList.add("transparent")
        })